{% load i18n templatetag_handlebars %}

{% tplhandlebars "settings/showTaxes" %}
  <header>
    <h3>{% trans "Invoicing settings" %} &nbsp;>&nbsp; {% trans "Taxes" %}</h3>
  </header>
  <section class="clearfix">
    <div class="inner">
      <table class="table table-taxes table-success">
        <thead>
          <th>{% trans "Name" %}</th>
          <th>{% trans "Rate" %}</th>
        </thead>
        <tbody>
          {{#each tax in controller}}
          <tr>
            <td>{{#link-to 'settings.editTax' controller.session.tenant tax}}{{tax.name}}{{/link-to}}</a></td>
            <td>{{tax.displayRate}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <br/>
      {{#link-to 'settings.addTax' controller.session.tenant class="pull-right btn btn-sm btn-success btn-rounded"}}
        {% trans "Add" %}
      {{/link-to}}
    </div>
  </section>
{% endtplhandlebars %}
