{% load i18n templatetag_handlebars %}

{% tplhandlebars "settings/numbering" %}
  <header>
    <h3>{% trans "Invoicing settings" %} &nbsp;>&nbsp; {% trans "Numbering" %}</h3>
    <div class="btn-toolbar pull-right">{{partial "settings/partials/saveSettings"}}</div>
  </header>
  <section class="clearfix">
    <div class="inner">
      <table class="half pull-left">
        <tbody>
          <tr>
            <td class="label">
              <label>{% trans "Scheme" %}</label>
            </td>
            <td>
              {{select
                contentBinding="Vosae.Config.invoicingSchemes"
                valueBinding="invoicing.numbering.scheme"
                optionValuePath="content.value"
                optionLabelPath="content.label"
                containerCssClass="success" }}
            </td>
          </tr>
          {{#unless invoicing.numbering.schemeIsNumber}}
          <tr>
            <td class="label">
              <label>{% trans "Dates format" %}</label>
            </td>
            <td>
              {{select
                contentBinding="Vosae.Config.invoicingDateFormats"
                valueBinding="invoicing.numbering.dateFormat"
                optionValuePath="content.value"
                optionLabelPath="content.label"
                containerCssClass="success" }}
            </td>
          </tr>
          <tr>
            <td class="label">
              <label>{% trans "Separator" %}</label>
            </td>
            <td>
              {{select
                contentBinding="Vosae.Config.invoicingSeparators"
                valueBinding="invoicing.numbering.separator"
                optionValuePath="content.value"
                optionLabelPath="content.label"
                containerCssClass="success" }}
            </td>
          </tr>
          <tr>
            <td class="label">
              <label>{% trans "Reset at end of period" %}</label>
            </td>
            <td>
              {{switch
                checkedBinding="invoicing.numbering.fyReset" }}
            </td>
          </tr>
          {{/unless}}
        </tbody>
      </table>
      <table class="half pull-left">
        <tbody>
          <tr>
            <td>
              <div class="preview">
                <h4>{% trans "Reference preview" %}</h5>
                <p>{{invoicing.numbering.preview}}</p>
              </div>
            </td>
          </tr>
      </table>
    </div>
  </section>
{% endtplhandlebars %}