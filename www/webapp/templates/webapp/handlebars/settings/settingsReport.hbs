{% load i18n templatetag_handlebars %}

{% tplhandlebars "settings/report" %}
  <header>
    <h3>{% trans "Global settings" %} &nbsp;>&nbsp; {% trans "Reports" %}</h3>
    <div class="btn-toolbar pull-right">{{partial "settings/partials/saveSettings"}}</div>
  </header>
  <section class="clearfix">
    <div class="inner">
      <table>
        <tbody>
          <tr>
            <td class="label">
              <label>{% trans "Default language" %}</label>
            </td>
            <td>
              {{select
                contentBinding="Vosae.Config.languages"
                valueBinding="reportSettings.language"
                optionValuePath="content.code"
                optionLabelPath="content.name"
                containerCssClass="success" }}
            </td>
          </tr>
          <tr>
            <td class="label">
              <label>{% trans "Font name" %}</label>
            </td>
            <td>
              {{select
                contentBinding="Vosae.Config.reportFontFamilies"
                valueBinding="reportSettings.fontName"
                optionValuePath="content.value"
                optionLabelPath="content.name"
                containerCssClass="success" }}
            </td>
          </tr>
          <tr>
            <td class="label">
              <label>{% trans "Font size" %}</label>
            </td>
            <td>
              {{select
                contentBinding="Vosae.Config.reportFontSizes"
                valueBinding="reportSettings.fontSize"
                optionValuePath="content.value"
                optionLabelPath="content.name"
                containerCssClass="success" }}
            </td>
          </tr>
          <tr>
            <td class="label">
              <label>{% trans "Font color" %}</label>
            </td>
            <td>
              {{color-picker
                valueBinding="reportSettings.fontColor"
                classNames="form-control form-control-settings" }}
            </td>
          </tr>
          <tr>
            <td class="label">
              <label>{% trans "Base color" %}</label>
            </td>
            <td>
              {{color-picker
                valueBinding="reportSettings.baseColor"
                classNames="form-control form-control-settings" }}
            </td>
          </tr>
          <tr>
            <td class="label">
              <label>{% trans "Force black and white" %}</label>
            </td>
            <td>
              {{switch
                checkedBinding="reportSettings.forceBw" }}
            </td>
          </tr>
          <tr>
            <td class="label">
              <label>{% trans "Paper size" %}</label>
            </td>
            <td>
              {{select
                contentBinding="Vosae.Config.reportPaperSizes"
                valueBinding="reportSettings.paperSize"
                optionValuePath="content.value"
                optionLabelPath="content.name"
                containerCssClass="success" }}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </section>
{% endtplhandlebars %}